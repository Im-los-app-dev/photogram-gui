<h1>List of users</h1>

<form action="/add_user">
<label for="username">Username</label>
<input id="username" type="text" placeholder="Enter a username..." name= "new_username">

<Button>Add user</Button>
</form>

<div></div>

<table class="table" border ="1" >

  <tr>
    <th>ID</th>
    <th>username</th>
    <th></th>
  </tr>

  <% @list_of_users.each do |a_user| %>

    <tr>
    <th> <%= a_user.id %> </th>
    <th> <%= a_user.username%> </th>
    <th> <a href = "/users/<%= a_user.username %>" > Show details </th>
    </tr>


  <%end%>






</table>
