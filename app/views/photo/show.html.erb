<h1>Photos Details</h1>

<dl>

  <dt>Image</dt>
    <dd>  <img src= "<%=@a_photo.image%>"> </dd>

  <dt>Caption</dt>
    <dd><%=@a_photo.caption%></dd>

  <dt>Owner</dt>
    <dd><%=@a_photo.poster.username%></dd>

  <dt>Posted</dt>
    <dd><%=@a_photo.poster.created_at%></dd>

  <dt>Edit photo</dt>
    <dd>
  
      <form action="/update_photos/<%=@a_photo.id%>">
        <%# <form action="/update_photos">      %> 

        <label for="newurl">Image</label>
        <input id="newurl" type="text" name="updateurl" value="<%= @a_photo.image %>" placeholder="Enter a URL for the image..." >

        <label for="updesc">Caption</label>
        <textarea id="updesc" name="cap_update" > <%=@a_photo.caption%> </textarea>

        <button>Update photo</button>

      </form>

    </dd>

  <dt>Delete photo</dt>
    <dd>
      <a href = "/delete_photo/<%= @a_photo.id%>">Delete this photo</a>
    </dd>

</dl>


<h2>Comments</h2>

<table class="table">

  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @a_photo.comments.each do |a_comment| %>

    <tr>
    <th> <%= a_comment.commenter.username %> </th>
    <th> <%= a_comment.body%> </th>
    <th> <%= a_comment.created_at%> </th>
    </tr>


  <%end%>
</table>

<h3>Add a new comment</h3>

<form action="/insert_comment">

  <label for="pid">Photo ID</label>
  <input id="pid" type="text" value="<%= @a_photo.id %>" name="pid" >

  <label for="author">Author ID</label>
  <input id="author" type="text" name="author_id" >

  <label for="ctext">Comment</label>
  <textarea id="ctext" placeholder="Enter a comment..." name="comment_text" > </textarea>

  <button>Add comment</button>
</form>
